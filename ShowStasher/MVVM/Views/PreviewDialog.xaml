<Window x:Class="ShowStasher.MVVM.Views.PreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowStasher.MVVM.Models"
        mc:Ignorable="d"
        Title="Preview Organization"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <DockPanel LastChildFill="True">
        <!-- Buttons docked to bottom -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,10,0"
                    IsCancel="True" />
            <Button Content="Confirm"
                    Command="{Binding ConfirmCommand}"
                    IsDefault="True" />
        </StackPanel>

        <!-- TreeView fills remaining space -->
        <TreeView ItemsSource="{Binding RootItems}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local:PreviewItem}"
                                          ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsChecked}"
                                  VerticalAlignment="Center" />
                        <TextBlock Margin="5,0,0,0">
                        <Run Text="{Binding Name}" />
                        <Run Text=" → " />
                        <Run Text="{Binding DestinationPath}"
                             Foreground="Gray"
                             FontStyle="Italic" />
                        </TextBlock>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </DockPanel>

</Window>
